@page
@using TopLearn.Core.Convertors
@using TopLearn.DataLayer.Entities.User
@model TopLearn.Web.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = " نقش ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست نقش ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            لیست نقش ها
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                    <div style="margin: 10px 0">
                        <a class="btn btn-outline btn-success" asp-page="CreateRole">افزودن نقش جدید</a>
                    </div>
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr>
                                <th>عنوان نقش</th>
                                <th>دستورات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model.RoleList)
                            {
                                <tr class="gradeA odd">
                                    <td>@role.RoleTitle</td>
                                    <td>
                                        <a href="/Admin/Roles/EditRole/@role.RoleId" class="btn btn-sm btn-warning ">ویرایش</a>
                                        <a href="/Admin/Roles/DeleteRole/@role.RoleId" class="btn btn-sm btn-danger ">حذف</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

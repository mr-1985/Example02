@page
@model TopLearn.Web.Pages.Admin.Courses.IndexModel
@{
    ViewData["Title"] = "لیست دوره های سایت";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست دوره ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            لیست دوره های سایت
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div style="margin: 10px 0">
                <a class="btn btn-outline btn-success" asp-page="CreateCourse">افزودن دوره جدید</a>
            </div>

            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                <thead>
                    <tr>
                        <th>تصویر</th>
                        <th>عنوان دوره</th>
                        <th>تعداد جلسات</th>
                        <th>دستورات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListCourse)
                    {
                        <tr class="gradeA odd">
                            <td>
                                <img src="/Course/Thumb/@item.ImageName" class="thumbnail" />
                            </td>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.EpisodeCount
                            </td>
                            <td>
                                <a href="/Admin/Courses/EditCourse/@item.CourseId" class="btn btn-sm btn-warning ">
                                    ویرایش
                                </a>
                                <a href="/Admin/Courses/IndexEpisode/@item.CourseId" class="btn btn-sm btn-success ">
                                    افزودن بخش 
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

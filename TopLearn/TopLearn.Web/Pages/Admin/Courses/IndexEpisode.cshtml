@page "{id}"
@using TopLearn.DataLayer.Entities.Course
@model TopLearn.Web.Pages.Admin.Courses.IndexEpisodeModel
@{
    ViewData["Title"] = "بخش های دوره ";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست بخش ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="col-lg-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            لیست بخش های دوره
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div style="margin: 10px 0">
                <a class="btn btn-outline btn-success" asp-route-id="@ViewData["CourseId"].ToString()" asp-page="CreateEpisode">
                    افزودن بخش جدید
                </a>
            </div>

            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                <thead>
                    <tr>
                        <th>عنوان بخش</th>
                        <th>زمان بخش</th>
                        <th>دسترسی</th>
                        <th>دستورات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CourseEpisodes)
                    {
                        <tr class="gradeA odd">

                            <td>
                                @item.EpisodeTitle
                            </td>
                            <td>
                                @item.EpisodeTime
                            </td>
                            <td>
                                @if (item.IsFree)
                                {
                                    <span class="text-success">
                                        <i class="glyphicon glyphicon-ok"></i>
                                    </span>
                                }
                                else
                                {
                                    <span class="text-danger">
                                        <i class="glyphicon glyphicon-remove"></i>
                                    </span>
                                }
                            </td>
                            <td>
                                <a href="/Admin/Courses/EditEpisode/@item.EpisodeId" class="btn btn-sm btn-warning ">ویرایش</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

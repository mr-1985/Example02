@page "{id}"
@model TopLearn.Web.Pages.Admin.Courses.CreateEpisodeModel
@{
    ViewData["Title"] = " بخش جدید";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن بخش جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="CourseEpisode.CourseId"/>
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات بخش
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان بخش</label>
                        <input type="text" asp-for="CourseEpisode.EpisodeTitle" class="form-control">
                        <span asp-validation-for="CourseEpisode.EpisodeTitle"></span>
                    </div>

                    <div class="form-group">
                        <label>زمان بخش</label>
                        <input type="text" asp-for="CourseEpisode.EpisodeTime" class="form-control">
                        <span asp-validation-for="CourseEpisode.EpisodeTime"></span>
                    </div>

                    <div class="form-group">
                        <label>فایل بخش </label>
                        <input type="file" name="fileEpisode">
                        <p class="text-danger">
                            ارسال فایل اجباری است
                        </p>
                        @if (ViewData["IsExistFile"] != null)
                        {
                            <div class="alert alert-danger">
                                نام فایل معتبر نیست
                            </div>
                        }
                        <span asp-validation-for="CourseEpisode.EpisodeFileName"></span>
                    </div>

                    <div class="form-group">
                        <label>دسترسی</label>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="CourseEpisode.IsFree">رایگان
                            </label>
                        </div>
                    </div>

                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-sm btn-success"/>
                </div>
            </div>
        </div>
    </form>
</div>
